# Database Configuration
# Default: SQLite (no installation required)
DATABASE_URL=sqlite:///welllog.db

# Optional: PostgreSQL (requires PostgreSQL installation)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/welllog_db

# File Storage Configuration
# Default: LOCAL storage (FREE - no cloud account needed)
# Files stored in: backend/uploads/
STORAGE_TYPE=local

# Optional: AWS S3 Configuration
# Uncomment to use AWS S3 instead of local storage
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=welllog-files-bucket

# Google Gemini AI Configuration (OPTIONAL)
# Required only for AI interpretation and chatbot features
# Get FREE API key at: https://aistudio.google.com/app/apikey
# FREE tier: 60 requests per minute!
# Leave empty to use app without AI features
GEMINI_API_KEY=

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
PORT=5000
